<?xml version='1.0' encoding='utf-8'?>
<widget id="com.karar.app" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quiz Master 2020++</name>
    <android-versionCode>1..0.5</android-versionCode>
    <description>
      Speaking Quiz Master 2020++. A unique app in which you can compete with others online. This app will also include
      voice and speech functions later on. People would be able to create a quiz through speaking.
    </description>
    <author email="karar@haktechlondon.co.uk" href="http://cordova.io">
        Karar Haider
    </author>
    <content src="index.html" />
    <icon src="www/img/logo.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
</widget>
